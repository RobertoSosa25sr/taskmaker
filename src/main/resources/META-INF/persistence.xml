<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">
    <class>modelo.TareasEntity</class>
    <properties>
      <property name="hibernate.connection.url" value="jdbc:sqlserver://localhost:1433;database=TASKMAKER"/>
      <property name="hibernate.connection.driver_class" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
      <property name="hibernate.connection.username" value="user"/>
      <property name="hibernate.connection.password" value="password"/>
      <property name="hibernate.connection.dialect" value="org.hibernate.dialect.SQLServerDialect"/>

      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>


